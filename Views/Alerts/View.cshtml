@model OpsSecProject.Models.Alert
@{
    ViewData["Title"] = "View Alert";
}
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">View Alert</h6>
    </div>
    <div class="card-body">
        <form>
            <div class="form-group row">
                <label asp-for="TimeStamp" class="col-sm-4 col-form-label">Alert Generated On</label>
                <div class="col-sm-8">
                    <input asp-for="TimeStamp" readonly class="form-control-plaintext" value="@Html.ValueForModel(Model.TimeStamp.ToString("dddd, dd MMMM yyyy hh:mm tt"))">
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Message" class="col-sm-4 col-form-label">Alert Message</label>
                <div class="col-sm-8">
                    <textarea asp-for="Message" readonly class="form-control-plaintext" value="@Model.Message"></textarea>
                </div>
            </div>
            @if (!Model.ExternalNotificationType.Equals(ExternalNotificationType.NONE))
            {
                <div class="form-group row">
                    <p class="text-center">
                        An accompanying notification has been sent to you via
                        @if (Model.ExternalNotificationType.Equals(ExternalNotificationType.EMAIL))
                        {
                            <span>email</span>
                        }
                        @if (Model.ExternalNotificationType.Equals(ExternalNotificationType.SMS))
                        {
                            <span>SMS</span>
                        }
                    </p>
                </div>
            }
        </form>
    </div>
</div>