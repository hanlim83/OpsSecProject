@{
    ViewData["Title"] = "Account Settings";
}
@if (!String.IsNullOrEmpty(Convert.ToString(ViewData["Alert"])) && ViewData["Alert"].Equals("Danger") && !String.IsNullOrEmpty(Convert.ToString(ViewData["Message"])))
{
    <div class="form-label-group">
        <div class="alert alert-danger" role="alert">
            @ViewData["Message"]
        </div>

    </div>
}
@if (!String.IsNullOrEmpty(Convert.ToString(ViewData["Alert"])) && ViewData["Alert"].Equals("Warning") && !String.IsNullOrEmpty(Convert.ToString(ViewData["Message"])))
{
    <div class="form-label-group">
        <div class="alert alert-warning" role="alert">
            @ViewData["Message"]
        </div>

    </div>
}
<h1 class="h3 mb-2 text-gray-800">Your Account</h1>
<p class="mb-4"></p>

<div class="card shadow mb-4">
    @await Html.PartialAsync("SettingsPartial")
</div>
<div class="container">
    <div class="text-center">
        <img class="img-fluid mt-3 mb-4" src="https://42f2671d685f51e10fc6-b9fcecea3e50b3b59bdc28dead054ebc.ssl.cf5.rackcdn.com/illustrations/preferences_uuo2.svg" style="max-width: 50%; max-height: 50%;">
    </div>
</div>